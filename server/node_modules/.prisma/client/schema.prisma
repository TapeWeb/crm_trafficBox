generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  uID        Int      @id @default(autoincrement())
  uToken     String   @db.VarChar(255)
  uName      String   @db.VarChar(64)
  uSurname   String   @db.VarChar(64)
  uPassword  String   @db.VarChar(255)
  uGender    String   @db.VarChar(32)
  uEmail     String   @db.VarChar(255)
  uAge       Int
  uRole      String   @default("User") @db.VarChar(64)
  created_at DateTime @default(now()) @db.Timestamp(0)
  updated_at DateTime @updatedAt @db.Timestamp(0)

  offers offers[]
}

model offers {
  oID        Int      @id @default(autoincrement())
  oUID       Int
  oName      String   @db.VarChar(64)
  oDescribe  String?  @db.VarChar(64)
  oPrice     Int
  oValues    Int
  created_at DateTime @default(now()) @db.Timestamp(0)

  user users @relation(fields: [oUID], references: [uID], onDelete: Cascade)
}
